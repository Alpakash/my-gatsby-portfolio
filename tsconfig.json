// tsconfig.json
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "resolveJsonModule": true,
        "jsx": "preserve",
        "lib": [
            "dom",
            "esnext"
        ],
        "strict": true,
        "noEmit": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "allowJs": true,
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "public",
        ".cache"
    ]
}